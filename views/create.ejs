<%- include("_header") -%>

<style>
    .form-section {
        background: #6fbad8;
        padding: 24px 32px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        max-width: 1600px;
        margin: 32px auto;
    }
    .form-row {
        display: flex;
        gap: 24px;
        margin-bottom: 18px;
    }
    .form-group {
        flex: 1;
        display: flex;
        flex-direction: column;
    }
    label {
        font-weight: 600;
        margin-bottom: 6px;
        color: #333;
    }
    input[type="text"],
    input[type="number"] {
        padding: 8px 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 1rem;
    }
    button[type="submit"] {
        background: #1976d2;
        color: #fff;
        border: none;
        padding: 12px 28px;
        border-radius: 5px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        margin-top: 10px;
        transition: background 0.2s;
    }
    button[type="submit"]:hover {
        background: #125ea2;
    }
    .error-message {
        color: #b71c1c;
        background: #ffeaea;
        border: 1px solid #f5c2c7;
        padding: 10px 16px;
        border-radius: 5px;
        margin-bottom: 16px;
        font-weight: 500;
    }
    @media (max-width: 700px) {
        .form-row {
            flex-direction: column;
            gap: 0;
        }
    }
</style>




<body>
    <div class="container">
        <h1 style="text-align:center; margin-top:32px;">Find Customers</h1>
        <h4 style="text-align:center; margin-top:32px;">Total number of records in the database: 12</h4>
        
       
        <div class="form-section">
            <h3 style="margin-bottom:18px;">Add New Customer</h3>
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error-message"><%= error %></div>
            <% } %>
            <form method="post" action="/create" autocomplete="off">
                <div class="form-row">
                    <div class="form-group">
                        <label for="id">ID:</label>
                        <input type="number" id="id" name="id" min="1" required>
                    </div>
                    <div class="form-group">
                        <label for="first_name">First Name:</label>
                        <input type="text" id="first_name" name="first_name" required pattern=".{1,}">
                    </div>
                    <div class="form-group">
                        <label for="last_name">Last Name:</label>
                        <input type="text" id="last_name" name="last_name" required pattern=".{1,}">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="state">State (XX):</label>
                        <input type="text" id="state" name="state" 
                               pattern="[A-Za-z]{2}" 
                               maxlength="2"
                               title="Two-letter state code"
                               required>
                    </div>
                    <div class="form-group">
                        <label for="sales_ytd">Sales YTD:</label>
                        <input type="number" id="sales_ytd" step="0.01" name="sales_ytd" min="0" required>
                    </div>
                    <div class="form-group">
                        <label for="previous_years_sales">Previous Years Sales:</label>
                        <input type="number" id="previous_years_sales" step="0.01" name="previous_years_sales" min="0" required>
                    </div>
                </div>

                <button type="submit">Find</button>
                <button type="submit">Reset</button>
            </form>
        </div>
    </div>




    
<%- include("_footer") -%>